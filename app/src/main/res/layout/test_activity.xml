<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.artquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/text_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_text_hint"
            android:imeOptions="actionDone"
            android:inputType="textCapWords" />
        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            style="@style/card_view"
            cardView:cardBackgroundColor="@color/divider"
            cardView:cardElevation="@dimen/elevation_one">
            <ImageView
                style="@style/ImageView"
                android:src="@drawable/guernica" />
        </android.support.v7.widget.CardView>
        <TextView
            style="@style/questions"
            android:text="@string/question1" />
        <CheckBox
            android:id="@+id/check_box1q1"
            style="@style/radio_button"
            android:text="@string/caravaggio" />
        <CheckBox
            android:id="@+id/check_box2q1"
            style="@style/radio_button"
            android:text="@string/picasso" />
        <CheckBox
            android:id="@+id/check_box3q1"
            style="@style/radio_button"
            android:text="@string/titian" />
        <CheckBox
            android:id="@+id/check_box4q1"
            style="@style/radio_button"
            android:text="@string/mona_lisa" />
        <CheckBox
            android:id="@+id/check_box5q1"
            style="@style/radio_button"
            android:text="@string/guernica" />
        <CheckBox
            android:id="@+id/check_box6q1"
            style="@style/radio_button"
            android:text="@string/the_creation_of_adam" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            style="@style/card_view"
            cardView:cardBackgroundColor="@color/divider"
            cardView:cardElevation="@dimen/elevation_one">
            <ImageView
                style="@style/ImageView"
                android:src="@drawable/girl_with_a_pearl_earring" />
        </android.support.v7.widget.CardView>
        <TextView
            style="@style/questions"
            android:text="@string/question2" />
        <RadioGroup
            android:id="@+id/radio_group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_one"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radio_button1q2"
                style="@style/radio_button"
                android:text="@string/da_vinci" />
            <RadioButton
                android:id="@+id/radio_button2q2"
                style="@style/radio_button"
                android:text="@string/salvador_dali" />
            <RadioButton
                android:id="@+id/radio_button3q2"
                style="@style/radio_button"
                android:text="@string/vermeer" />
        </RadioGroup>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view3"
            style="@style/card_view"
            cardView:cardBackgroundColor="@color/divider"
            cardView:cardElevation="@dimen/elevation_one">
            <ImageView
                style="@style/ImageView"
                android:src="@drawable/night_watch_rembrandt" />
        </android.support.v7.widget.CardView>
        <TextView
            style="@style/questions"
            android:text="@string/question3" />
        <RadioGroup
            android:id="@+id/radio_group3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_one"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radio_button1q3"
                style="@style/radio_button"
                android:text="@string/botticelli" />
            <RadioButton
                android:id="@+id/radio_button2q3"
                style="@style/radio_button"
                android:text="@string/claude_monet" />
            <RadioButton
                android:id="@+id/radio_button3q3"
                style="@style/radio_button"
                android:text="@string/rembrandt" />
        </RadioGroup>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view4"
            style="@style/card_view"
            cardView:cardBackgroundColor="@color/divider"
            cardView:cardElevation="@dimen/elevation_one">
            <ImageView
                style="@style/ImageView"
                android:src="@drawable/beheading_of_saint_john_the_baptist_caravaggio" />
        </android.support.v7.widget.CardView>
        <TextView
            style="@style/questions"
            android:text="@string/question4" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_answer"
            android:hint="@string/answer"
            android:imeOptions="actionDone"
            android:inputType="text"/>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view5"
            style="@style/card_view"
            cardView:cardBackgroundColor="@color/divider"
            cardView:cardElevation="@dimen/elevation_one">
            <ImageView
                style="@style/ImageView"
                android:src="@drawable/the_creation_of_adam" />
        </android.support.v7.widget.CardView>
        <TextView
            style="@style/questions"
            android:text="@string/question5" />
        <RadioGroup
            android:id="@+id/radio_group5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_one"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radio_button1q5"
                style="@style/radio_button"
                android:text="@string/michelangelo" />
            <RadioButton
                android:id="@+id/radio_button2q5"
                style="@style/radio_button"
                android:text="@string/salvador_dali" />
            <RadioButton
                android:id="@+id/radio_button3q5"
                style="@style/radio_button"
                android:text="@string/claude_monet" />
        </RadioGroup>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view6"
            style="@style/card_view"
            cardView:cardBackgroundColor="@color/divider"
            cardView:cardElevation="@dimen/elevation_one">
            <ImageView
                style="@style/ImageView"
                android:src="@drawable/the_scream" />
        </android.support.v7.widget.CardView>
        <TextView
            style="@style/questions"
            android:text="@string/question2" />
        <RadioGroup
            android:id="@+id/radio_group6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_one"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radio_button1q6"
                style="@style/radio_button"
                android:text="@string/da_vinci" />
            <RadioButton
                android:id="@+id/radio_button2q6"
                style="@style/radio_button"
                android:text="@string/caravaggio" />
            <RadioButton
                android:id="@+id/radio_button3q6"
                style="@style/radio_button"
                android:text="@string/munch" />
        </RadioGroup>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view7"
            style="@style/card_view"
            cardView:cardBackgroundColor="@color/divider"
            cardView:cardElevation="@dimen/elevation_one">
            <ImageView
