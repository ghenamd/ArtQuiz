        <RadioGroup
            android:id="@+id/radio_group7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_one"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radio_button1q7"
                style="@style/radio_button"
                android:text="@string/elder" />
            <RadioButton
                android:id="@+id/radio_button2q7"
                style="@style/radio_button"
                android:text="@string/botticelli" />
            <RadioButton
                android:id="@+id/radio_button3q7"
                style="@style/radio_button"
                android:text="@string/michelangelo" />
        </RadioGroup>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view8"
            style="@style/card_view"
            cardView:cardBackgroundColor="@color/divider"
            cardView:cardElevation="@dimen/elevation_one">
            <ImageView
                style="@style/ImageView"
                android:src="@drawable/starry_night" />
        </android.support.v7.widget.CardView>
        <TextView
            style="@style/questions"
            android:text="@string/question6" />
        <RadioGroup
            android:id="@+id/radio_group8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_one"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radio_button1q8"
                style="@style/radio_button"
                android:text="@string/rembrandt" />
            <RadioButton
                android:id="@+id/radio_button2q8"
                style="@style/radio_button"
                android:text="@string/van_gogh" />
            <RadioButton
                android:id="@+id/radio_button3q8"
                style="@style/radio_button"
                android:text="@string/vermeer" />
        </RadioGroup>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view9"
            style="@style/card_view"
            cardView:cardBackgroundColor="@color/divider"
            cardView:cardElevation="@dimen/elevation_one">
            <ImageView
                style="@style/ImageView"
                android:src="@drawable/the_persistence_of_memory_1" />
        </android.support.v7.widget.CardView>
        <TextView
            style="@style/questions"
            android:text="@string/question2" />
        <RadioGroup
            android:id="@+id/radio_group9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_one"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radio_button1q9"
                style="@style/radio_button"
                android:text="@string/salvador_dali" />
            <RadioButton
                android:id="@+id/radio_button2q9"
                style="@style/radio_button"
                android:text="@string/picasso" />
            <RadioButton
                android:id="@+id/radio_button3q9"
                style="@style/radio_button"
                android:text="@string/titian" />
        </RadioGroup>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view10"
            style="@style/card_view"
            cardView:cardBackgroundColor="@color/divider"
            cardView:cardElevation="@dimen/elevation_one">
            <ImageView
                style="@style/ImageView"
                android:src="@drawable/mona_lisa" />
        </android.support.v7.widget.CardView>
        <TextView
            style="@style/questions"
            android:text="@string/question7" />
        <CheckBox
            android:id="@+id/check_box1q10"
            style="@style/radio_button"
            android:text="@string/raphael" />
        <CheckBox
            android:id="@+id/check_box2q10"
            style="@style/radio_button"
            android:text="@string/munch" />
        <CheckBox
            android:id="@+id/check_box3q10"
            style="@style/radio_button"
            android:text="@string/da_vinci" />
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top_one"
            android:onClick="submit"
            android:text="@string/submit"
            android:textColor="@color/primary" />
    </LinearLayout>
</ScrollView>
